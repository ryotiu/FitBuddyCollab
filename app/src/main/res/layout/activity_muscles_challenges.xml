<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/goals"
    tools:context=".MuscleChallenges">

    <TextView
        android:id="@+id/MuscleChallengesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Muscle Building Challenge"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Day1MuscleChallengesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#fff3eb"
        android:text="DAY 1"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/Day2MuscleChallengesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff3eb"
        android:text="DAY 2"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/Day3MuscleChallengesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAY 3"
        android:background="#fff3eb"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/Day4MuscleChallengesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAY 4"
        android:background="#fff3eb"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/Day5MuscleChallengesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAY 5"
        android:background="#fff3eb"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/Day6MuscleChallengesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAY 6"
        android:background="#fff3eb"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/Day7MuscleChallengesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAY 7"
        android:background="#fff3eb"
        android:layout_marginTop="20dp"/>

</LinearLayout>